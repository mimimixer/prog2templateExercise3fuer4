            <VBox>
               <children>
                  <JFXButton fx:id="homeBtn" onAction="#navigateToMovielist" prefHeight="25.0" prefWidth="130.0" text="Home" />
                  <JFXButton fx:id="watchlistBtn" onAction="#navigateToWatchlist" prefWidth="130.0" text="Watchlist" />
